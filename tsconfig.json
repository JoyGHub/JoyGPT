{
  "compilerOptions": {
    "types": ["./src/global.d.ts"],
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2018",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
